{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"root": true,
	"css": {
		"formatter": {
			"indentWidth": 2,
			"lineWidth": 100,
			"indentStyle": "tab"
		},
		"parser": {
			"allowWrongLineComments": true,
			"cssModules": true
		}
	},
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"nursery": {
				"useSortedClasses": "info"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
